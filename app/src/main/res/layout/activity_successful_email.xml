<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/successfulemail_parent_layout">

    <TextView
        android:id="@+id/successfulemail_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Verification mail sent successfully. Please check your email and confirm it."
        android:textSize="36dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/successfullemailactivity_goto_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="loginButtonOnClick"
        android:text="Click Here to Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/successfulemail_txt" />

</android.support.constraint.ConstraintLayout>